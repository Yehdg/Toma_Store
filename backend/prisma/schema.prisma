generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Member {
  id         Int         @id @default(autoincrement())
  name       String      @db.VarChar(30)
  email      String      @unique @db.VarChar(30)
  password   String      @db.VarChar(200)
  img        String?     @db.VarChar(255)
  imgName    String?     @map("img_name") @db.VarChar(100)
  phone      String?     @db.VarChar(20)
  updateDate DateTime?   @map("update_date") @db.DateTime(0)
  createDate DateTime    @map("create_date") @db.DateTime(0)
  orders     OrderList[]

  @@map("member")
}

model Product {
  id         Int         @id @default(autoincrement())
  name       String      @db.VarChar(30)
  price      Decimal     @db.Decimal(6, 2)
  quantity   Int
  imgPath    String?     @map("img_path") @db.VarChar(255)
  imgName    String?     @map("img_name") @db.VarChar(100)
  remark     String?     @db.VarChar(100)
  updateDate DateTime?   @map("update_date") @db.DateTime(0)
  createDate DateTime    @map("create_date") @db.DateTime(0)
  orders     OrderList[]

  @@map("product")
}

model OrderList {
  orderId       Int       @map("order_id")
  memberId      Int       @map("member_id")
  productId     Int       @map("product_id")
  orderQuantity Int       @map("order_quantity")
  orderPrice    Decimal   @map("order_price") @db.Decimal(10, 2)
  isComplete    Int       @map("is_complete")
  updateDate    DateTime? @map("update_date") @db.DateTime(0)
  orderDate     DateTime  @map("order_date") @db.DateTime(0)
  member        Member    @relation(fields: [memberId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "order_list_ibfk_1")
  product       Product   @relation(fields: [productId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "order_list_ibfk_2")

  @@id([orderId, memberId, productId])
  @@index([memberId], map: "member_id")
  @@index([productId], map: "product_id")
  @@map("order_list")
}
